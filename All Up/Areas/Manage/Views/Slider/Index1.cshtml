@model List<Slider>
@{
    int counter = 0;
}
<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Slider:</h1>
        <a class="btn btn-primary"asp-action="Create" asp-controller="slider">Create</a>
        <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">N0</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">ImageUrl</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
           @foreach (var slider in Model)
           {
                    counter++;
                    <tr>
                        <th scope="row">1</th>
                        <td>@slider.Title</td>
                        <td>@slider.Description</td>
                        <td>@slider.ImageUrl</td>
                        <td>
                            <a asp-action="update" asp-controller="slider" asp-Route-id="@slider.Id">Update</a>
                            <a asp-action="delete" asp-controller="slider" asp-Route-id="@slider.Id">Delete</a>
                        </td>
                    </tr>
           }       
  </tbody>
</table>
    </div>
</div>